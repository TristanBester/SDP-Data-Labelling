<title>Edit Profile</title>

<%- include('header-registered.ejs',{Firstname: name}) %>

<section class="user-profile section gback2">
    <div class="container">
        <div class="row gutters">
        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
        <div class="wrapper fadeInDown">
            
            <div class="card-body">
                <div class="account-settings">
                    <div class="user-profile">
                        <div class="sidebar" style="align-items: center;">
                            <!-- User Widget -->
                            <div class="widget user" style="align-items: center;">
                        <div class="image d-flex justify-content-center">
                            <img src="images/user/user-thumb.jpg" alt="" class="">
                        </div>
                        <h5 class="user-name"><%= name %></h5>
                        <h6 class="email">email@email.com</h6>
                            </div>
                        </div>
                    </div>
                </div>
            
        </div>
        </div>
        </div>
        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
        <div class="wrapper fadeInDown" style="align-items: inherit;">
            <div id="formContent" style="padding: 30px; width: auto; max-width: 800px;">
            <div class="card-body" style="padding: 0;">
                <h3>Edit Profile</h3>
                <div class="row gutters">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <h6 class="mb-2 text-primary">Personal Details</h6>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label for="fullName">Name</label>
                            <input type="text" class="form-control" id="fullName" value="<%= name %>">
                        </div>
                    </div>
                </div>
                <div class="form-group choose-file">
                    <h6 class="mt-3 mb-2 text-primary">Profile Picture</h6>
                        <div class="widget user" style="align-items: center;">
                            <div class="image d-flex justify-content-center">
                                <img src="images/user/user-thumb.jpg" alt="" class="">
                            </div>
                            <input type="file" class="form-control-file mt-2 pt-1" id="input-file">
                        </div>
                    </div>
                 </div>
                <div class="row gutters">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <h6 class="mt-3 mb-2 text-primary">Password</h6>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label for="currentPw">Current Password</label>
                            <input type="name" class="form-control" id="currentPw" value="***********">
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label for="newPw">New Password</label>
                            <input type="name" class="form-control" id="newPw" placeholder="New Password">
                        </div>
                    </div>
                </div>
                <div class="row gutters">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div style="text-align: center;">
                            <button type="button" id="submit" name="submit" class="btn btn-primary">Update</button>
                            <a href="/dashboard" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
        </div>
        </div>
</section>

<%- include('footer') %> 